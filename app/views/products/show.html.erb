<p id="notice"><%= notice %></p>

<div class="container">
  <%= image_tag(@product.image_url, class: "img-zoom img-responsive bigshowpic", data_zoom_image: @product.image_url) %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 :class="hello">
        <span class="glyphicon glyphicon-home" aria-hidden="true"><strong>Name:</strong></span>
        <%= @product.name %>
      </h4>
    </div>
    <div class="col-md-3">
      <h4 :class="hello">
        <span class="glyphicon glyphicon-usd" aria-hidden="true"><strong>Price:</strong></span>
        <%= @product.price.to_d/100 %>
      </h4>
    </div>
    <div class="col-md-3">
      <h4>
        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"><strong>Description:</strong></span>
        <%= @product.description %>
      </h4>
    </div>
    <!--div class="col-md-3">
      <h4>
        <span class="glyphicon glyphicon-picture" aria-hidden="true"><strong>Photo</strong></span>
        <%#= image_tag @product.image_url, class: "img-responsive showpic" %>
      </h4>
    </div-->
    <div class="col-md-3">
      <h4>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"><strong>Colour:</strong></span>
        <%= @product.colour %>
        <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
      </h4>
    </div>
  </div>
</div>

